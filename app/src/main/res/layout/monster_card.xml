<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/monsterImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/demon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

    <TextView
            android:id="@+id/monsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demon"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/monsterImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" />

    <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toTopOf="@+id/lightningIcon" />

    <TextView
            android:id="@+id/heartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            app:layout_constraintStart_toEndOf="@+id/heartIcon"
            app:layout_constraintTop_toTopOf="@+id/heartIcon"
            app:layout_constraintBottom_toBottomOf="@+id/heartIcon"
            android:layout_marginStart="3dp" />

    <ImageView
            android:id="@+id/lightningIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/energy"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/heartIcon"
            app:layout_constraintBottom_toTopOf="@+id/trophyIcon" />

    <TextView
            android:id="@+id/lightningValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_constraintTop_toTopOf="@id/lightningIcon"
            app:layout_constraintStart_toEndOf="@id/lightningIcon"
            app:layout_constraintBottom_toBottomOf="@id/lightningIcon"
            android:layout_marginStart="3dp" />

    <ImageView
            android:id="@+id/trophyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/victory_point"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lightningIcon"
            app:layout_constraintBottom_toTopOf="@+id/monsterName" />

    <TextView
            android:id="@+id/trophyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintTop_toTopOf="@id/trophyIcon"
            app:layout_constraintStart_toEndOf="@id/trophyIcon"
            app:layout_constraintBottom_toBottomOf="@id/trophyIcon"
            android:layout_marginStart="3dp" />

    <View
            android:id="@+id/deadOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/overlay_background"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/deadIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/white_flag"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:id="@+id/towerIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tokyo"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/monsterImage"
            app:layout_constraintTop_toBottomOf="@+id/monsterImage"
            android:translationX="-15dp"
            android:translationY="-16dp"
            android:elevation="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>