<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <!-- Monster Image -->
    <ImageView
            android:id="@+id/monsterImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/demon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

    <!-- Monster Name -->
    <TextView
            android:id="@+id/monsterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demon"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/monsterImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" />

    <!-- Heart Icon -->
    <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toTopOf="@+id/lightningIcon" />

    <!-- Heart Value -->
    <TextView
            android:id="@+id/heartValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            app:layout_constraintStart_toEndOf="@+id/heartIcon"
            app:layout_constraintTop_toTopOf="@+id/heartIcon"
            app:layout_constraintBottom_toBottomOf="@+id/heartIcon" />

    <!-- Lightning Icon -->

    <!-- Lightning Value -->
    <ImageView
            android:id="@+id/lightningIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/energy"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/heartIcon"
            app:layout_constraintBottom_toTopOf="@+id/trophyIcon" />

    <TextView
            android:id="@+id/lightningValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_constraintTop_toTopOf="@id/lightningIcon"
            app:layout_constraintStart_toEndOf="@id/lightningIcon"
            app:layout_constraintBottom_toBottomOf="@id/lightningIcon"
            android:layout_marginEnd="16dp" />

    <!-- Trophy Icon -->

    <!-- Trophy Value -->
    <ImageView
            android:id="@+id/trophyIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/victory_point"
            app:layout_constraintStart_toEndOf="@+id/monsterImage"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/lightningIcon"
            app:layout_constraintBottom_toTopOf="@+id/monsterName" />

    <TextView
            android:id="@+id/trophyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintTop_toTopOf="@id/trophyIcon"
            app:layout_constraintStart_toEndOf="@id/trophyIcon"
            app:layout_constraintBottom_toBottomOf="@id/trophyIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>