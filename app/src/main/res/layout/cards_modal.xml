<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:minWidth="250dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/botBoughtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demon bought this card"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/cardsFragmentCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="5dp"
            android:padding="1dp"
            android:elevation="4dp"
            android:background="@drawable/card_unselected_background"/>

        <FrameLayout
            android:id="@+id/cardsFragmentCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="5dp"
            android:padding="1dp"
            android:elevation="4dp"
            android:background="@drawable/card_unselected_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cardsFragmentCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#EE8181"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp"/>

        <Button
            android:id="@+id/cardsFragmentValidateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validate"
            android:backgroundTint="#B0EE81"
            android:textColor="#000000"
            android:padding="15dp"
            android:layout_marginStart="8dp"
            android:elevation="4dp"
            />
    </LinearLayout>

</LinearLayout>