<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.CardsFragment">

    <!-- Layout pour les deux cartes côte à côte -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/cardsFragmentCard1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

        <FrameLayout
            android:id="@+id/cardsFragmentCard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Layout pour les boutons en dessous des cartes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cardsFragmentCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="#EE8181"
            android:textColor="#000000"
            android:padding="15dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cardsFragmentValidateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validate"
            android:backgroundTint="#B0EE81"
            android:textColor="#000000"
            android:padding="15dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>